<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body
        id="page-top"
        data-controller="@symfony/ux-swup/swup"
        data-containers="#main #nav"
        data-theme="slide"
    >
    <!-- Page Wrapper -->
    <div id="wrapper">
        {% include '_include/sidebar.html.twig' %}
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                {% include '_include/topbar.html.twig' %}
                <!-- Begin Page Content -->
                <div id="main" class="container-fluid">
                    <!-- Content Row -->
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        {% include '_include/logout-model.html.twig' %}
    </div>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
