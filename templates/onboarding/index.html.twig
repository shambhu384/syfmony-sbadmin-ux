{% extends 'base.html.twig' %}

{% block title %}Onboarding index{% endblock %}

{% block content %}
{% set options = constant('App\\Entity\\Onboarding::OPTIONS') %}
<!-- Page Heading -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">History</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Response</th>
                            <th>Comment</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for onboarding in onboardings %}
                        <tr>
                            <td>{{ onboarding.id }}</td>
                            <td>{{ onboarding.name }}</td>
                            <td>{{ options[onboarding.response] }}</td>
                            <td>{{ onboarding.comment }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="{{ path('onboarding_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
