{% extends 'base.html.twig' %}

{% block title %}Leave{% endblock %}

{% block content %}
    <h1>Leave</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ leave.id }}</td>
            </tr>
            <tr>
                <th>FromDate</th>
                <td>{{ leave.fromDate ? leave.fromDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ToDate</th>
                <td>{{ leave.toDate ? leave.toDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ leave.reason }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ leave.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ leave.createdAt ? leave.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ leave.updatedAt ? leave.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('leave_index') }}">back to list</a>

    <a href="{{ path('leave_edit', {'id': leave.id}) }}">edit</a>

    {{ include('leave/_delete_form.html.twig') }}
{% endblock %}
