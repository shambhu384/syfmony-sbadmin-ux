{% extends 'base.html.twig' %}

{% block title %}Leave index{% endblock %}

{% block content %}
    <h1>Leave index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FromDate</th>
                <th>ToDate</th>
                <th>Reason</th>
                <th>Status</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for leave in leaves %}
            <tr>
                <td>{{ leave.id }}</td>
                <td>{{ leave.fromDate ? leave.fromDate|date('Y-m-d') : '' }}</td>
                <td>{{ leave.toDate ? leave.toDate|date('Y-m-d') : '' }}</td>
                <td>{{ leave.reason }}</td>
                <td>{{ leave.status }}</td>
                <td>{{ leave.createdAt ? leave.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ leave.updatedAt ? leave.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('leave_show', {'id': leave.id}) }}">show</a>
                    <a href="{{ path('leave_edit', {'id': leave.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('leave_new') }}">Create new</a>
{% endblock %}
