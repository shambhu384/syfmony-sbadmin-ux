{{ form_start(form) }}
<div class="form-row">
    <div class="form-group col-md-4">
        {{ form_row(form.leaveType) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-3">
        {{ form_row(form.fromDate) }}
    </div>
    <div class="form-group col-md-3">
        {{ form_row(form.toDate) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-3">
        {{ form_row(form.type) }}
    </div>
</div> 
<div class="form-row">
    <div class="form-group col-md-6">
        {{ form_row(form.reason, {attr: {cols: 15, rows: 4}}) }}
    </div>
</div>
 <div class="form-row">
    <div class="form-group col-md-6">
        {{ form_row(form.status) }}
    </div>
</div>
 
<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
