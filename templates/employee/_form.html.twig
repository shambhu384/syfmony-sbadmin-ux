{{ form_start(form) }}
<div class="form-row">
    <div class="form-group col-md-4">
        {{ form_row(form.firstName) }}
    </div>
    <div class="form-group col-md-4">
        {{ form_row(form.lastName) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-4">
        {{ form_row(form.gender) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
    {{ form_row(form.joinedDate) }}
    </div>
    <div class="form-group col-md-6">
        {{ form_row(form.dateOfBirth) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-4">
        {{ form_row(form.profession) }}
    </div>
    <div class="form-group col-md-4">
        {{ form_row(form.aadharNumber) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-4">
        {{ form_row(form.profilePic) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
    {{ form_row(form.phone) }}
    </div>
    <div class="form-group col-md-6">
        {{ form_row(form.emergencyContact) }}
    </div>
</div>
<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
